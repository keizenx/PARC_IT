<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- Séquence pour les équipements -->
    <record id="seq_it_equipment" model="ir.sequence">
        <field name="name">Séquence d'équipement</field>
        <field name="code">it.equipment</field>
        <field name="prefix">EQP/</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>
    
    <!-- Séquence pour les incidents -->
    <record id="seq_it_incident" model="ir.sequence">
        <field name="name">Séquence d'incident</field>
        <field name="code">it.incident</field>
        <field name="prefix">INC/</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
    </record>
    
    <!-- Séquence pour les tickets -->
    <record id="seq_it_ticket" model="ir.sequence">
        <field name="name">Séquence de ticket</field>
        <field name="code">it.ticket</field>
        <field name="prefix">TIC/</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
    </record>
</odoo> 