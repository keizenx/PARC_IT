<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Assets frontend pour le portail client -->
        <template id="assets_frontend" inherit_id="web.assets_frontend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" type="text/css" href="/it__park/static/src/scss/portal.scss"/>
                <script type="text/javascript" src="/it__park/static/src/js/portal.js"></script>
                <script type="text/javascript" src="/it__park/static/src/js/portal_enhancements.js"></script>
                <script type="text/javascript" src="/it__park/static/src/js/ticket_notifications.js"></script>
                <script type="text/javascript" src="/it__park/static/src/js/website_it_support.js"></script>
                <script type="text/javascript" src="/it__park/static/src/js/signup.js"></script>
            </xpath>
        </template>
        
        <!-- Assets backend pour l'interface administrateur -->
        <template id="assets_backend" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/it__park/static/src/js/ticket_notifications.js"></script>
            </xpath>
        </template>
    </data>
</odoo> 